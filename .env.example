# Feature Flags
USE_PREMIUM_APIS=false  # Set to 'true' to use paid APIs (costs ~$650/month)

# Database Configuration
DATABASE_URL=postgresql://taraga_user:taraga_password@localhost:5432/taraga_db

# Redis Configuration
REDIS_URL=redis://localhost:6379

# === FREE APIs (No cost) ===
# Yahoo Finance - no key required
# RSS Feeds - no key required  
# Template Analysis - no key required

# Korea Investment & Securities (KIS) API - Free with account
KIS_APP_KEY=your_kis_app_key_here
KIS_APP_SECRET=your_kis_app_secret_here
KIS_ACCOUNT_NO=your_kis_account_number_here

# === PREMIUM APIs (Only needed if USE_PREMIUM_APIS=true) ===
# Polygon.io - US Stock Data ($199/month)
POLYGON_API_KEY=your_polygon_api_key_here

# NewsAPI - Market News ($449/month)
NEWS_API_KEY=your_newsapi_key_here

# OpenAI - AI Analysis (~$30-100/month)
OPENAI_API_KEY=your_openai_api_key_here

# Application Settings
ENVIRONMENT=development
DEBUG=True
